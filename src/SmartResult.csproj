<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net60</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>SmartResult</PackageId>
    <Version>1.0.0</Version>
    <Authors>SmartSoft</Authors>
    <PackageIcon>icon-square.png</PackageIcon>
    <PackageTags>Result,Results,SmartResult,Error,Handling</PackageTags>
    <Description>A simple, fluent discriminated union of an error or a result.</Description>
    <PackageProjectUrl>https://github.com/smartsoft-org/smart-result</PackageProjectUrl>
    <RepositoryType>git</RepositoryType>
    <licenses>https://opensource.org/licenses/MIT</licenses>
    <RepositoryUrl>https://github.com/smartsoft-org/smart-result</RepositoryUrl>
    <PackageOutputPath>../artifacts/</PackageOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../assets/icon-square.png" Pack="true" Visible="false" PackagePath="" />
    <None Include="Stylecop.json" />
    <AdditionalFiles Include="Stylecop.json" />
  </ItemGroup>

</Project>
